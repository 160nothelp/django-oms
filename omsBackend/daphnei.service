[Unit]
Description=Daphne Interface Server
[Service]
ExecStartPre=/usr/bin/bash -c 'cd /data/projects/oms/omsBackend'
ExecStart=/usr/bin/bash -c '/root/.pyenv/shims/daphne -b 0.0.0.0 -p 8001 -v2 omsBackend.asgi:channel_layer --access-log=/data/logs/oms/daphnei.log'
Restart=always
KillSignal=SIGQUIT
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target